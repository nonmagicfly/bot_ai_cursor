{
  "dashboard": {
    "title": "Telegram Bot - Мониторинг",
    "tags": ["telegram", "bot", "monitoring"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Статус бота",
        "type": "stat",
        "targets": [
          {
            "expr": "bot_health",
            "legendFormat": "Health"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "❌ Не работает",
                    "color": "red"
                  },
                  "1": {
                    "text": "✅ Работает",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "unit": "none"
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Всего пользователей",
        "type": "stat",
        "targets": [
          {
            "expr": "bot_users_total",
            "legendFormat": "Users"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0}
      },
      {
        "id": 3,
        "title": "Активных сегодня",
        "type": "stat",
        "targets": [
          {
            "expr": "bot_users_active_today",
            "legendFormat": "Active Today"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0}
      },
      {
        "id": 4,
        "title": "Всего программ",
        "type": "stat",
        "targets": [
          {
            "expr": "bot_programs_total",
            "legendFormat": "Programs"
          }
        ],
        "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0}
      },
      {
        "id": 5,
        "title": "Активных программ",
        "type": "stat",
        "targets": [
          {
            "expr": "bot_programs_active",
            "legendFormat": "Active Programs"
          }
        ],
        "gridPos": {"h": 4, "w": 4, "x": 16, "y": 0}
      },
      {
        "id": 6,
        "title": "Записей сегодня",
        "type": "stat",
        "targets": [
          {
            "expr": "bot_records_today",
            "legendFormat": "Records Today"
          }
        ],
        "gridPos": {"h": 4, "w": 4, "x": 20, "y": 0}
      },
      {
        "id": 7,
        "title": "Операции по типам (сегодня)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "bot_operations_today",
            "legendFormat": "{{operation_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "barAlignment": 0,
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 80,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {
                "group": "A",
                "mode": "normal"
              },
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {
                "type": "linear"
              },
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 8,
        "title": "Всего операций (счётчик)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(bot_operations_total[5m])",
            "legendFormat": "{{operation_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "ops"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 9,
        "title": "Длительность обработки запросов",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(bot_request_duration_seconds_bucket[5m])) by (le, handler))",
            "legendFormat": "p50 {{handler}}"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(bot_request_duration_seconds_bucket[5m])) by (le, handler))",
            "legendFormat": "p95 {{handler}}"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(bot_request_duration_seconds_bucket[5m])) by (le, handler))",
            "legendFormat": "p99 {{handler}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 10,
        "title": "Ошибки по типам",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(bot_request_errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "ops"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 11,
        "title": "Использование CPU",
        "type": "timeseries",
        "targets": [
          {
            "expr": "bot_system_cpu_percent",
            "legendFormat": "CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 20}
      },
      {
        "id": 12,
        "title": "Использование памяти",
        "type": "timeseries",
        "targets": [
          {
            "expr": "bot_system_memory_percent",
            "legendFormat": "Memory %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 20}
      },
      {
        "id": 13,
        "title": "Время работы бота",
        "type": "stat",
        "targets": [
          {
            "expr": "bot_uptime_seconds",
            "legendFormat": "Uptime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "mappings": [
              {
                "type": "range",
                "options": {
                  "from": 0,
                  "to": 3600,
                  "result": {
                    "text": "{{value}} сек"
                  }
                }
              },
              {
                "type": "range",
                "options": {
                  "from": 3600,
                  "to": 86400,
                  "result": {
                    "text": "{{value}} ч"
                  }
                }
              },
              {
                "type": "range",
                "options": {
                  "from": 86400,
                  "to": null,
                  "result": {
                    "text": "{{value}} дн"
                  }
                }
              }
            ]
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 20}
      },
      {
        "id": 14,
        "title": "Топ операций за сегодня",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, bot_operations_today)",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28}
      },
      {
        "id": 15,
        "title": "Статистика по операциям",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum by (operation_type) (bot_operations_total)",
            "legendFormat": "{{operation_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28}
      }
    ],
    "schemaVersion": 38,
    "version": 2,
    "links": []
  }
}
