# Токен Telegram бота (получить у @BotFather)
# Вставьте свой токен вместо ВАШ_ТОКЕН_ЗДЕСЬ
BOT_TOKEN=ВАШ_ТОКЕН_ЗДЕСЬ

# Путь к файлу базы данных SQLite
DATABASE=./data/gym.db

# Порт для метрик Prometheus (по умолчанию: 8000)
METRICS_PORT=8000

# Включить мониторинг (Prometheus + Grafana)
# Установите в true для запуска полного мониторинга
ENABLE_MONITORING=false

# Порт Prometheus (по умолчанию: 9090)
PROMETHEUS_PORT=9090

# Порт Grafana (по умолчанию: 3000)
GRAFANA_PORT=3000

# Пароль для Grafana (по умолчанию: admin)
GRAFANA_PASSWORD=admin

# Пользователь Grafana (по умолчанию: admin)
GRAFANA_USER=admin

# URL для доступа к Grafana (для правильных ссылок в уведомлениях)
# Замените на ваш домен или IP сервера
GRAFANA_ROOT_URL=http://localhost:3000
